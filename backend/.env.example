# Database
DATABASE_URL="postgresql://username:password@localhost:5432/sales_commission_db"

# Server
PORT=3001
NODE_ENV=development

# Frontend
FRONTEND_URL=http://localhost:3000

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CRM Integrations
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_REDIRECT_URI=http://localhost:3001/api/crm/callback/salesforce

HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_REDIRECT_URI=http://localhost:3001/api/crm/callback/hubspot

PIPEDRIVE_CLIENT_ID=your-pipedrive-client-id
PIPEDRIVE_CLIENT_SECRET=your-pipedrive-client-secret
PIPEDRIVE_REDIRECT_URI=http://localhost:3001/api/crm/callback/pipedrive

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Email (for notifications)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourcompany.com

# AI/ML Services (for future use)
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4
AI_ENABLED=false