# Database
DATABASE_URL="postgresql://username@localhost:5432/sales_commission_db"

# Server
PORT=3002
NODE_ENV=production

# Frontend
FRONTEND_URL=https://your-frontend-domain.com

# JWT Security (REQUIRED - Generate secure random strings)
JWT_SECRET=your-secure-random-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-secure-random-refresh-secret-min-32-chars
JWT_ACCESS_TOKEN_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Session Security
SESSION_SECRET=your-secure-random-session-secret-min-32-chars

# CRM Integrations (Optional)
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_REDIRECT_URI=

HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=
HUBSPOT_REDIRECT_URI=
HUBSPOT_WEBHOOK_SECRET=
HUBSPOT_SYNC_SCHEDULE="*/30 * * * *"
HUBSPOT_SYNC_ON_STARTUP=false

PIPEDRIVE_CLIENT_ID=
PIPEDRIVE_CLIENT_SECRET=
PIPEDRIVE_REDIRECT_URI=

# Redis (for rate limiting and sessions)
REDIS_URL=redis://localhost:6379

# Email Service - Mailjet (Optional)
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_SECRET_KEY=your-mailjet-secret-key
EMAIL_FROM_ADDRESS=noreply@commitapp.io
EMAIL_FROM_NAME=Commit Sales Commission

# Security Headers
CORS_ORIGIN=https://your-frontend-domain.com
HELMET_CSP_DIRECTIVES=default-src 'self'

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# GDPR Compliance
DATA_RETENTION_DAYS=365
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-for-sensitive-data