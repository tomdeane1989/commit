# HubSpot Integration Configuration
# Add these to your .env file

# HubSpot OAuth App Credentials
# Get these from your HubSpot app settings: https://app.hubspot.com/developers/
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret

# OAuth Redirect URI 
# Must match exactly with what's configured in HubSpot app settings
HUBSPOT_REDIRECT_URI=http://localhost:3002/api/integrations/hubspot/callback

# For production:
# HUBSPOT_REDIRECT_URI=https://sales-commission-backend-latest.onrender.com/api/integrations/hubspot/callback

# Optional: HubSpot Webhook Verification
# HUBSPOT_WEBHOOK_SECRET=your_webhook_secret

# Required Scopes (configured in HubSpot app):
# - crm.objects.deals.read
# - crm.objects.deals.write
# - crm.objects.contacts.read
# - crm.objects.companies.read
# - crm.objects.owners.read
# - crm.schemas.deals.read